<div class="container">
  <h1>Choose an option below.</h1>

  <h3><%= @department.id ? 'Edit Department' : 'Add Department' %></h3>
  
  <hr />

  <%= form_for @department do |f| %>
    <%= f.label :name %>
    <%= f.text_field :name, required: true, autofocus: true %>
    <br />
    <%= f.submit %>
  <% end %>
</div>