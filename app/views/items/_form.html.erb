<div class="container">
  <h1>Edit or Add an Item</h1>
  <hr />
  <h3><%= @item.id ? 'Edit item' : 'Add item' %></h3>
  <%= form_for [@department, @item] do |f| %>
    <%= f.label :Name %>
    <%= f.text_field :name, required: true, autofocus: true %>
    <br />
    <%= f.label :Price %>
    <%= f.text_field :price%>
    <br />
    <%= f.label :Description %>
    <%= f.text_field :description %>
    <%= f.submit %>
  <% end %>
</div>