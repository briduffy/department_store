<div class="container">
<h1><%= @department.name %> Items</h1>
<hr />
<h3>To add an item to the department, click the link below.</h3>
<%= link_to 'Add Item', new_department_item_path(@department) %>
<ul>
  <% @items.each do |item| %>
    <li>
      <p>$
        <%= item.price %>
      </p>
      <p>
        <%= item.description %>
        <%= link_to item.name, [@department, item] %>
      </p>
    </li>
  <% end %>
  <%= link_to 'Back', department_path(@department) %>
</ul>